{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "allowJS": true, 
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {  
      "@/*": ["./src/*"]
    }
  }
}